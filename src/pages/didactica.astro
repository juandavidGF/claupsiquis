---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

---

<BaseLayout
	title="Didácticas | Claudia Figueroa"
	description="Recursos didácticos y material educativo"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Didácticas"
				tagline="Narrativas de los docentes que enseñan las Ciencias Sociales"
				align="start"
			/>
			
			<div class="content-grid">
				<article class="content-item">
					<h2>Profesor Eliecer Mendoza profesor Escuela Normal Superior del Amazonas</h2>
					<div class="video-container">
						<iframe
							src="https://drive.google.com/file/d/1nJn2w6kVmkBSdXQYIHOKShO_9Vgm7M9a/preview"
							allow="autoplay"
							allowfullscreen
							loading="lazy">
						</iframe>
					</div>
					<p class="description">
						<!-- Descripción del video y su contenido didáctico... -->
					</p>
				</article>
				<article class="content-item">
					<h2>Yhoana Calderón López - Docente de la E.N.S - Amazonas</h2>
					<div class="video-container">
						<iframe
							src="https://drive.google.com/file/d/1v1-ua131atg39IGqIrzrI4TzrOfhFuw5/preview"
							allow="autoplay"
							allowfullscreen
							loading="lazy">
						</iframe>
					</div>
					<p class="description">
						<!-- Descripción del video y su contenido didáctico... -->
					</p>
					<h2>Entrevista diagnóstica HOMBRE LETICIA AMAZONAS</h2>
					<p class="description">
						<a href="https://docs.google.com/document/d/1EcD-FRWuAbU1ngqvwvUncbaFi9VRgwGT/edit?usp=sharing&ouid=100585831837998689795&rtpof=true&sd=true" target="_blank" rel="noopener noreferrer">
							Accede a la entrevista sobre la enseñanza de las ciencias sociales aquí.
						</a>
					</p>
					<p>
						<a href="https://drive.google.com/file/d/18hSNRL8KsAHF-WlQZcmyVneos0ynID2j/view?usp=sharing" target="_blank" rel="noopener noreferrer">
							Accede a la entrevista completa aquí.
						</a>
					</p>
					<h2>Galería de Imágenes</h2>
					<p>"Picnic" A manera de incentivo o como estrategia pedagógica para generar ambientes amigables y de interés por el área</p>
					<div class="carousel">
						<div class="carousel-inner">
							<img src="/assets/fotos/imagen1.jpeg" alt="Descripción de la imagen 1" class="carousel-item active" />
							<img src="/assets/fotos/imagen2.jpeg" alt="Descripción de la imagen 2" class="carousel-item" />
							<img src="/assets/fotos/imagen3.jpeg" alt="Descripción de la imagen 3" class="carousel-item" />
							<img src="/assets/fotos/imagen4.jpeg" alt="Descripción de la imagen 4" class="carousel-item" />
							<img src="/assets/fotos/imagen5.jpeg" alt="Descripción de la imagen 5" class="carousel-item" />
							<img src="/assets/fotos/imagen6.jpeg" alt="Descripción de la imagen 6" class="carousel-item" />
							<img src="/assets/fotos/imagen7.jpeg" alt="Descripción de la imagen 7" class="carousel-item" />
							<img src="/assets/fotos/imagen8.jpeg" alt="Descripción de la imagen 8" class="carousel-item" />
							<img src="/assets/fotos/imagen9.jpeg" alt="Descripción de la imagen 9" class="carousel-item" />
							<img src="/assets/fotos/imagen10.jpeg" alt="Descripción de la imagen 10" class="carousel-item" />
							<img src="/assets/fotos/imagen11.jpeg" alt="Descripción de la imagen 11" class="carousel-item" />
							<img src="/assets/fotos/imagen12.jpeg" alt="Descripción de la imagen 12" class="carousel-item" />
							<img src="/assets/fotos/imagen13.jpeg" alt="Descripción de la imagen 13" class="carousel-item" />
							<img src="/assets/fotos/imagen14.jpeg" alt="Descripción de la imagen 14" class="carousel-item" />
							<img src="/assets/fotos/imagen15.jpeg" alt="Descripción de la imagen 15" class="carousel-item" />
							<img src="/assets/fotos/imagen16.jpeg" alt="Descripción de la imagen 16" class="carousel-item" />
							<img src="/assets/fotos/imagen17.jpeg" alt="Descripción de la imagen 17" class="carousel-item" />
							<img src="/assets/fotos/imagen18.jpeg" alt="Descripción de la imagen 17" class="carousel-item" />
							<img src="/assets/fotos/imagen19.jpeg" alt="Descripción de la imagen 17" class="carousel-item" />
						</div>
						<button class="carousel-control prev" onclick="moveCarousel(-1)">&#10094;</button>
						<button class="carousel-control next" onclick="moveCarousel(1)">&#10095;</button>
					</div>
				</article>

				<script>
					let currentIndex = 0;
					const items = document.querySelectorAll('.carousel-item');
					const totalItems = items.length;

					function showItem(index: number) {
						items.forEach((item: Element, i: number) => {
							(item as HTMLElement).style.display = (i === index) ? 'block' : 'none';
						});
					}

					function moveCarousel(direction: number) {
						currentIndex = (currentIndex + direction + totalItems) % totalItems;
						showItem(currentIndex);
					}

					function autoSlide() {
						moveCarousel(1);
					}

					setInterval(autoSlide, 5000); // Cambia cada 5 segundos
					showItem(currentIndex); // Muestra el primer elemento al cargar
				</script>

				<style>
					.carousel {
						position: relative;
						width: 100%;
						overflow: hidden;
					}

					.carousel-inner {
						display: flex;
						transition: transform 0.5s ease;
					}

					.carousel-item {
						min-width: 100%;
						display: none; /* Oculta todas las imágenes por defecto */
					}

					.carousel-control {
						position: absolute;
						top: 50%;
						transform: translateY(-50%);
						background-color: rgba(0, 0, 0, 0.5);
						color: white;
						border: none;
						cursor: pointer;
						padding: 10px;
					}

					.prev {
						left: 10px;
					}

					.next {
						right: 10px;
					}
				</style>

				<!-- Puedes agregar más artículos siguiendo la misma estructura -->
			</div>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.content-grid {
		display: grid;
		gap: 3rem;
	}

	.content-item {
		border-radius: 1.5rem;
		padding: 2rem;
		background: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.content-item h2 {
		font-size: var(--text-xl);
		margin-bottom: 1rem;
	}

	.video-container {
		position: relative;
		padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
		height: 0;
		overflow: hidden;
		border-radius: 1rem;
		margin-bottom: 1rem;
	}

	.video-container iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}

	.description {
		color: var(--gray-300);
		line-height: 1.6;
	}

	@media (min-width: 50em) {
		.content-grid {
			grid-template-columns: 1fr;
			gap: 4rem;
		}

		.content-item {
			padding: 3rem;
		}
	}
</style>
